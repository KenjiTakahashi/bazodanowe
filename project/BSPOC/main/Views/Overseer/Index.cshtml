@model main.Controllers.UserAdminVModel

@{ViewBag.Title = "Overseer - Index";}

<h2>Users</h2>

<p>@Html.ActionLink("Create New", "Create")</p>
<table>
    <tr>
        <th>@Html.DisplayNameFor(model => model.Users[0].Name)</th>
        <th>@Html.DisplayNameFor(model => model.Users[0].Surname)</th>
        <th>@Html.DisplayNameFor(model => model.Users[0].Email)</th>
        <th>@Html.DisplayNameFor(model => model.Users[0].Nickname)</th>
        <th>@Html.DisplayNameFor(model => model.Users[0].Password)</th>
        <th>@Html.DisplayNameFor(model => model.Users[0].Trusted)</th>
        <th></th>
    </tr>
@foreach (var item in Model.Users) {
    <tr>
        <td>@Html.DisplayFor(modelItem => item.Name)</td>
        <td>@Html.DisplayFor(modelItem => item.Surname)</td>
        <td>@Html.DisplayFor(modelItem => item.Email)</td>
        <td>@Html.DisplayFor(modelItem => item.Nickname)</td>
        <td>@Html.DisplayFor(modelItem => item.Password)</td>
        <td>@Html.DisplayFor(modelItem => item.Trusted)</td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.ID }) |
            @Html.ActionLink("Details", "Details", new { id=item.ID }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.ID })
        </td>
    </tr>
}
</table>

